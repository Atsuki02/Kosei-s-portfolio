---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Main from '../components/Main.astro';
import Layout from '../layouts/Layout.astro';

import { getMainImage } from "../library/microcms";


const response = await getMainImage({ fields: ["imageSrc"] });
const mainImages = response.contents[0].imageSrc;
const images = mainImages.map(mainImage => mainImage.url);
---

<Layout title="Home">
	<Header/>
	  <Main images={images}/>
	<Footer/>
</Layout>

